<% if session[:question].downcase.include? session[:answer].downcase || session[:question].downcase.match(session[:answer].downcase) %>
	<h1>Answer is correct</h1>
	<div>User score is <%= current_user.score %></div><br>
	<div>Correct answer: <%= session[:question] %></div>
	<div>Your answer: <%= session[:answer] %></div>
<% else %>
	<h1>Answer is incorrect</h1>
	<div>User score is<%= current_user.score %></div><br>
	<div>Correct answer: <%= session[:question] %></div>
	<div>Your answer: <%= session[:answer] %></div>
<%end%>

<%= form_tag({:controller => "trivia", :action => "question"}) do %>
	<%= submit_tag("Next question") %>
<%end%>

<div><%= link_to "Trivia homepage", trivia_index_path %></div>
<div><%= link_to "Main homepage", pages_index_path %></div>